@model Gym.Models.User
@{
    ViewData["Title"] = "Edit User";
}

<div class="vh-100 position-relative text-white"
     style="background: linear-gradient(115deg, rgba(0,0,0,0.85) 35%, rgba(0,0,0,0.4) 80%),
            url('/images/bg.jpg') no-repeat center right / cover;
            overflow: auto; padding: 40px;">

    <!-- Yellow blur effect -->
    <div style="position:absolute; top:0; right:-100px; width:450px; height:100%;
                background: radial-gradient(circle at 30% 50%, rgba(255, 193, 7, 0.25), transparent 75%);
                filter: blur(50px); opacity: 0.8;"></div>

    <!-- Form container -->
    <div class="card bg-dark text-white shadow-lg p-4"
    style="background-color: rgba(0,0,0,0.75); border-radius: 15px; z-index: 2; max-width: 600px; margin: auto;">
        <h2 class="mb-4 text-warning text-center fw-bold">Edit User</h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">Username</label>
                <input asp-for="Username" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Role</label>
                <select asp-for="Role" class="form-select">
                    <option>Admin</option>
                    <option>Trainer</option>
                    <option>Trainee</option>
                </select>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-warning fw-bold">Update</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary fw-bold">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #000;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
            color: #000;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
            color: #fff;
        }
</style>
