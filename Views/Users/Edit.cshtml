@model Gym.Models.User
@{
    ViewData["Title"] = "Edit User";
}

<div class="admin-users-bg min-vh-100 text-white py-4 py-md-5">
    <div class="container d-flex justify-content-center align-items-start align-items-md-center">
        <div class="card users-form-card shadow-lg p-4 p-md-5">

            <h2 class="mb-4 text-warning text-center fw-bold">Edit User</h2>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input asp-for="Username" class="form-control bg-dark text-white border-secondary" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" class="form-control bg-dark text-white border-secondary" type="email" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input asp-for="Password" class="form-control bg-dark text-white border-secondary" type="password" required />
                </div>

                <div class="mb-4">
                    <label class="form-label">Role</label>
                    <select asp-for="Role" class="form-select bg-dark text-white border-secondary">
                        <option>Admin</option>
                        <option>Trainer</option>
                        <option>Trainee</option>
                    </select>
                </div>

                <div class="d-flex flex-column flex-sm-row justify-content-between gap-2">
                    <button type="submit" class="btn btn-warning fw-bold w-100 w-sm-auto">Update</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-light fw-bold w-100 w-sm-auto">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .users-form-card {
        background-color: rgba(0,0,0,0.82);
        border-radius: 18px;
        border: 1px solid rgba(255, 193, 7, 0.35);
        max-width: 520px;
        width: 100%;
        backdrop-filter: blur(6px);
    }

    .users-form-card .form-control,
    .users-form-card .form-select {
        min-height: 42px;
    }
</style>
