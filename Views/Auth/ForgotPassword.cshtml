@model Gym.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<!-- Fullscreen Background Section -->
<div class="vh-100 d-flex align-items-center justify-content-center text-white"
     style="background: linear-gradient(115deg, rgba(0,0,0,0.9) 40%, rgba(0,0,0,0.5) 90%),
            url('/images/bg.jpg') center/cover no-repeat;">

    <div class="bg-dark bg-opacity-75 p-5 rounded-4 shadow-lg text-white" style="width: 420px;">

        <!-- Title -->
        <div class="text-center mb-4">
            <i class="bi bi-shield-lock-fill text-warning" style="font-size: 3rem;"></i>
            <h3 class="fw-bold mt-2 text-warning">Forgot Your Password?</h3>
            <p class="text-light-50">Enter your email or phone number to reset your password.</p>
        </div>

        <!-- Form -->
        <form asp-action="ForgotPassword" method="post">
            <div class="form-group mb-3">
                <label asp-for="EmailOrPhone" class="form-label fw-semibold text-light"></label>
                <input asp-for="EmailOrPhone" class="form-control rounded-pill px-3 py-2"
                       placeholder="Enter your email or phone" />
                <span asp-validation-for="EmailOrPhone" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-warning w-100 py-2 fw-bold rounded-pill shadow-sm">
                Send Reset Link
            </button>
        </form>

        <!-- Message -->
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success text-center mt-3 rounded-pill shadow-sm fw-semibold">
                @ViewBag.Message
            </div>
        }

        <!-- Back to Login -->
        <div class="text-center mt-4">
            <a asp-action="Login" class="text-decoration-none fw-semibold text-warning">
                <i class="bi bi-arrow-left-circle"></i> Back to Login
            </a>
        </div>
    </div>
</div>
