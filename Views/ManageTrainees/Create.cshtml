@model Gym.Models.User
@{
    ViewData["Title"] = "Add Trainee";
}

<div class="vh-100 d-flex justify-content-center align-items-center text-white position-relative"
     style="background: linear-gradient(115deg, rgba(0,0,0,0.85) 35%, rgba(0,0,0,0.4) 80%),
            url('/images/bg.jpg') no-repeat center right / cover;">

    <!-- Yellow blur effect -->
    <div style="position:absolute; top:0; right:-100px; width:450px; height:100%;
                background: radial-gradient(circle at 30% 50%, rgba(255, 193, 7, 0.25), transparent 75%);
                filter: blur(50px); opacity: 0.8;">
    </div>

    <!-- Card -->
    <div class="card bg-dark text-white shadow-lg p-4"
         style="width: 500px; border-radius: 15px; border:1px solid rgba(255,255,255,0.1); z-index:2;">

        <h2 class="mb-4 text-warning fw-bold text-center">Add New Trainee</h2>

        <form asp-action="Create" method="post">

            <div class="mb-3">
                <label class="form-label fw-semibold">Username</label>
                <input asp-for="Username" class="form-control bg-black text-white border-secondary" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <input asp-for="Email" type="email" class="form-control bg-black text-white border-secondary" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Password</label>
                <input asp-for="Password" type="password" class="form-control bg-black text-white border-secondary" required />
            </div>

            <button type="submit" class="btn btn-warning w-100 fw-bold mt-3">Save</button>

            <a href="@Url.Action("Index")"
               class="btn btn-outline-light w-100 mt-3">
                Cancel
            </a>

        </form>

    </div>

</div>

<style>
    .form-control:focus {
        box-shadow: 0 0 6px #f0ad4e;
        border-color: #f0ad4e;
    }
</style>
