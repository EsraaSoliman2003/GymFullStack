@model Gym.Models.Trainee

<div class="card h-100 shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-person-fill me-2"></i> Your Profile</span>
        <a asp-action="EditProfile" class="btn btn-sm btn-outline-warning">
            <i class="bi bi-pencil-square me-1"></i> Edit
        </a>
    </div>

    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item bg-transparent border-secondary">
                <strong>Name:</strong> @(Model.User?.Username ?? "N/A")
            </li>
            <li class="list-group-item bg-transparent border-secondary">
                <strong>Email:</strong> @(Model.User?.Email ?? "N/A")
            </li>
            <li class="list-group-item bg-transparent border-secondary">
                <strong>Main Goal:</strong> @Model.Goal
            </li>
            <li class="list-group-item bg-transparent border-secondary">
                <strong>Date of Birth:</strong>
                @(Model.DateOfBirth.HasValue? Model.DateOfBirth.Value.ToString("yyyy-MM-dd") : "N/A")
            </li>
        </ul>
    </div>
</div>
