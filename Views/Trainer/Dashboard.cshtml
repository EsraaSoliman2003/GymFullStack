@model IEnumerable<Gym.Models.Trainee>
@{
    ViewData["Title"] = "Trainer Dashboard";
}

<div class="trainer-dashboard-wrapper text-white">

    <!-- ÿÆŸÑŸÅŸäÿ© ÿßŸÑÿ•ÿ∂ÿßÿ°ÿ© ÿßŸÑÿµŸÅÿ±ÿßÿ° -->
    <div class="trainer-bg-blur"></div>

    <div class="container py-4" style="position:relative; z-index:2;">

        <!-- ÿßŸÑŸáŸäÿØÿ± + ÿßŸÑÿ®ÿ≠ÿ´ -->
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
            <div>
                <h2 class="text-warning fw-bold mb-1">Trainer Dashboard</h2>
                <p class="text-muted mb-0">Manage your trainees, workouts and diet plans.</p>
            </div>

            <form method="get" class="w-100 w-md-auto">
                <div class="input-group">
                    <input type="text"
                           name="search"
                           class="form-control"
                           placeholder="Search by name..."
                           value="@Context.Request.Query["search"]" />
                    <button type="submit" class="btn btn-warning">
                        Search
                    </button>
                </div>
            </form>
        </div>

        <!-- ÿßŸÑÿ•ÿ≠ÿµÿßÿ¶Ÿäÿßÿ™ -->
        <div class="row g-3 mb-4">
            <div class="col-12 col-md-4">
                <div class="card text-center shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title text-warning">Total Trainees</h5>
                        <p class="display-6 mb-0">@ViewBag.TotalTrainees</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="card text-center shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title text-warning">Workout Plans</h5>
                        <p class="display-6 mb-0">@ViewBag.TotalWorkoutPlans</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="card text-center shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title text-warning">Diet Plans</h5>
                        <p class="display-6 mb-0">@ViewBag.TotalDietPlans</p>
                    </div>
                </div>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-dark border-warning text-center">
                <h5 class="text-warning mb-2">No trainees available</h5>
                <p class="mb-0">There are currently no trainees to display.</p>
            </div>
        }
        else
        {
            <div class="table-responsive shadow-lg rounded">
                <table class="table table-dark table-striped table-bordered align-middle text-center trainers-table">
                    <thead class="table-warning text-dark">
                        <tr>
                            <th>Trainee</th>
                            <th>Email</th>
                            <th>Goal</th>
                            <th>Workout Plans</th>
                            <th>Diet Plans</th>
                            <th>Subscription</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var trainee in Model)
                        {
                            <tr>
                                <td>@(trainee.User?.Username ?? "N/A")</td>
                                <td>@(trainee.User?.Email ?? "N/A")</td>
                                <td>@(string.IsNullOrWhiteSpace(trainee.Goal) ? "Not set" : trainee.Goal)</td>
                                <td>@(trainee.WorkoutPlans?.Count ?? 0)</td>
                                <td>@(trainee.DietPlans?.Count ?? 0)</td>
                                <td>
                                    @if (trainee.Subscription != null)
                                    {
                                        @trainee.Subscription.PackageName
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No subscription</span>
                                    }
                                </td>
                                <td class="d-flex flex-wrap justify-content-center gap-1">
                                    <a asp-action="TraineeDetails" asp-route-id="@trainee.Id"
                                       class="btn btn-sm btn-outline-light">
                                        Details
                                    </a>
                                    <a asp-action="ManageWorkout" asp-route-traineeId="@trainee.Id"
                                       class="btn btn-sm btn-warning">
                                        Workout
                                    </a>
                                    <a asp-action="ManageDiet" asp-route-traineeId="@trainee.Id"
                                       class="btn btn-sm btn-info">
                                        Diet
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<style>
    /* ÿßŸÑÿ∫ŸÑÿßŸÅ ÿßŸÑÿ£ÿ≥ÿßÿ≥Ÿä ŸÑŸÑÿµŸÅÿ≠ÿ© */
    .trainer-dashboard-wrapper {
        min-height: 100vh;
        position: relative;
        background: linear-gradient(115deg, rgba(0,0,0,0.85) 35%, rgba(0,0,0,0.4) 80%),
                    url('/images/bg.jpg') no-repeat center right / cover;
        overflow-x: hidden; /* üëà ŸäŸÖŸÜÿπ ÿßŸÑŸÄ scroll ÿßŸÑÿ£ŸÅŸÇŸä */
    }

    /* ÿßŸÑÿ•ÿ∂ÿßÿ°ÿ© ÿßŸÑÿµŸÅÿ±ÿßÿ° ŸÅŸä ÿßŸÑÿÆŸÑŸÅŸäÿ© */
    .trainer-bg-blur {
        position: absolute;
        top: 0;
        right: 0;
        width: 320px;
        height: 100%;
        background: radial-gradient(circle at 30% 50%, rgba(255, 193, 7, 0.25), transparent 75%);
        filter: blur(45px);
        opacity: 0.8;
        pointer-events: none;
    }

    .trainers-table thead {
        background-color: rgba(255, 193, 7, 0.9) !important;
        color: #000 !important;
    }

    .trainers-table tbody tr:hover {
        background-color: rgba(255, 193, 7, 0.2);
        transition: background 0.2s;
    }

    .table-responsive {
        border-radius: 0.5rem;
        overflow: hidden;
    }
</style>
