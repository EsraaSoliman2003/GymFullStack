@model IEnumerable<Gym.Models.Trainee>
@{
    ViewData["Title"] = "Trainer Dashboard";
}

<div class="vh-100 position-relative text-white" style="background: linear-gradient(115deg, rgba(0,0,0,0.85) 35%, rgba(0,0,0,0.4) 80%),
            url('/images/bg.jpg') no-repeat center right / cover;
            overflow: auto; padding: 40px;">

    <div style="position:absolute; top:0; right:-100px; width:450px; height:100%;
                background: radial-gradient(circle at 30% 50%, rgba(255, 193, 7, 0.25), transparent 75%);
                filter: blur(50px); opacity: 0.8;"></div>

    <div class="container" style="position:relative; z-index:2;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="text-warning fw-bold">Trainer Dashboard</h2>
                <p class="text-muted mb-0">Manage your trainees, workouts and diet plans.</p>
            </div>

            <form method="get" class="d-flex" style="max-width:300px;">
                <input type="text" name="search" class="form-control me-2" placeholder="Search by name..."
                    value="@Context.Request.Query["search"]" />
                <button type="submit" class="btn btn-warning">Search</button>
            </form>

        </div>

        <!-- Stats -->
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-warning">Total Trainees</h5>
                        <p class="display-6">@ViewBag.TotalTrainees</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-warning">Workout Plans</h5>
                        <p class="display-6">@ViewBag.TotalWorkoutPlans</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-warning">Diet Plans</h5>
                        <p class="display-6">@ViewBag.TotalDietPlans</p>
                    </div>
                </div>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-dark border-warning text-center">
                <h5 class="text-warning mb-2">No trainees available</h5>
                <p>There are currently no trainees to display.</p>
            </div>
        }
        else
        {
            <div class="table-responsive shadow-lg rounded">
                <table class="table table-dark table-striped table-bordered align-middle text-center">
                    <thead class="table-warning text-dark">
                        <tr>
                            <th>Trainee</th>
                            <th>Email</th>
                            <th>Goal</th>
                            <th>Workout Plans</th>
                            <th>Diet Plans</th>
                            <th>Subscription</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var trainee in Model)
                        {
                            <tr>
                                <td>@(trainee.User?.Username ?? "N/A")</td>
                                <td>@(trainee.User?.Email ?? "N/A")</td>
                                <td>@(string.IsNullOrWhiteSpace(trainee.Goal) ? "Not set" : trainee.Goal)</td>
                                <td>@(trainee.WorkoutPlans?.Count ?? 0)</td>
                                <td>@(trainee.DietPlans?.Count ?? 0)</td>
                                <td>
                                    @if (trainee.Subscription != null)
                                    {
                                        @trainee.Subscription.PackageName
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No subscription</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="TraineeDetails" asp-route-id="@trainee.Id"
                                        class="btn btn-sm btn-outline-light mb-1">
                                        Details
                                    </a>
                                    <a asp-action="ManageWorkout" asp-route-traineeId="@trainee.Id"
                                        class="btn btn-sm btn-warning mb-1">
                                        Workout
                                    </a>
                                    <a asp-action="ManageDiet" asp-route-traineeId="@trainee.Id"
                                        class="btn btn-sm btn-info mb-1">
                                        Diet
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>