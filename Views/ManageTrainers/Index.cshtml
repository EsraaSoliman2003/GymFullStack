@model IEnumerable<Gym.Models.User>
@{
    ViewData["Title"] = "Manage Trainers";
}

<div class="vh-100 position-relative text-white"
     style="background: linear-gradient(115deg, rgba(0,0,0,0.85) 35%, rgba(0,0,0,0.4) 80%),
            url('/images/bg.jpg') no-repeat center right / cover;
            overflow: hidden;">

    <!-- Yellow blur effect -->
    <div style="position:absolute; top:0; right:-100px; width:450px; height:100%;
                background: radial-gradient(circle at 30% 50%, rgba(255, 193, 7, 0.25), transparent 75%);
                filter: blur(50px); opacity: 0.8;"></div>

    <!-- Main content container -->
    <div class="container py-5" style="position: relative; z-index:2;">
        <h2 class="mb-4 text-warning fw-bold text-center">Manage Trainers</h2>

        <div class="mb-3 text-center">
            <a href="@Url.Action("Create")" class="btn btn-warning fw-bold px-4">Add New Trainer</a>
        </div>

        <div class="table-responsive">
            <table class="table table-dark table-striped table-bordered shadow-lg">
                <thead class="table-warning text-dark">
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var trainer in Model)
                    {
                        <tr>
                            <td>@trainer.Id</td>
                            <td>@trainer.Username</td>
                            <td>@trainer.Email</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = trainer.Id })" class="btn btn-sm btn-primary">Edit</a>

                                <form asp-action="DeleteConfirmed" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@trainer.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .table thead {
        background-color: rgba(255, 193, 7, 0.9) !important;
        color: #000 !important;
    }

    .table tbody tr:hover {
        background-color: rgba(255, 193, 7, 0.2);
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #000;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
            color: #000;
        }

    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #bb2d3b;
            border-color: #b02a37;
        }
</style>
