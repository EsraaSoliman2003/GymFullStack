                                </form>
                            </li>
                        }
                        else if (role == "Trainee")
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">About</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact
                                    Us</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Trainee"
                                    asp-action="Dashboard">Profile</a></li>
                            <li class="nav-item">
                                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
