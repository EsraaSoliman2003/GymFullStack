                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">About</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact Us</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Trainee" asp-action="Index">Profile</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Trainee" asp-action="Index">Explore Classes</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Trainee" asp-action="Index">Schedule</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Trainee" asp-action="Index">Available Subscriptions</a></li>
                            <li class="nav-item">
                                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-auth ms-lg-3">Logout</button>
                                </form>
                            </li>

                        } *@
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">About</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact
                                    Us</a></li>
                            <li class="nav-item"><a class="btn btn-auth ms-lg-3" asp-controller="Auth"
                                    asp-action="Login">Login</a></li>
                            <li class="nav-item"><a class="btn btn-auth ms-lg-2" asp-controller="Auth"
                                    asp-action="Register">Register</a></li>
                        }
                    </ul>

                </div>
            </div>
        </nav>



    </header>

    <main role="main">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>