                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact
                                    Us</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Users" asp-action="Index">Users</a>
                            </li>
                            <li class="nav-item"><a class="nav-link" asp-controller="ManageSubscriptions"
                                    asp-action="Index">Subscriptions</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Reports">Reports</a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
