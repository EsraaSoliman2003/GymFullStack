@{
    ViewData["Title"] = "About Us";
}

<div class="vh-100 d-flex justify-content-center align-items-center text-white position-relative text-center"
     style="background: linear-gradient(115deg, rgba(0,0,0,0.9) 50%, rgba(0,0,0,0.7) 80%), 
            url('/images/about-bg.jpg') no-repeat center center / cover;
            overflow: hidden;">

    <div class="container position-relative" style="z-index:2; max-width: 800px;">
        <h1 class="fw-bold display-3 mb-4" 
            style="letter-spacing:1px; text-shadow: 0 2px 15px rgba(0,0,0,0.7);">
            About <span style="color:#ffc107;">Our Gym</span>
        </h1>

        <p class="lead mb-4 fs-5" style="opacity:0.9; line-height:1.8;">
            At <span style="color:#ffc107;">Our Gym</span>, we’re more than just a fitness center — 
            we’re a community dedicated to helping you achieve your goals with confidence 
            and consistency. Whether you're just starting or pushing your limits, 
            our expert trainers and state-of-the-art equipment are here for you.
        </p>

        <p class="mb-5 fs-5" style="opacity:0.9;">
            Join us to experience a place where effort meets motivation, and every day 
            brings you one step closer to your best self 💪
        </p>

        <div class="d-flex justify-content-center gap-3">
            <a href="/home/contact" 
               class="btn btn-warning btn-lg rounded-pill px-4 shadow-sm border-0">
                Contact Us
            </a>
            <a href="/login" 
               class="btn btn-outline-light btn-lg rounded-pill px-4">
                Explore Programs
            </a>
        </div>
    </div>
</div>
