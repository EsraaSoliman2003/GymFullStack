@{
    ViewData["Title"] = "Home";
}

<div class="vh-100 d-flex align-items-center text-white position-relative"
     style="background: linear-gradient(115deg, rgba(0,0,0,0.85) 35%, rgba(0,0,0,0.4) 80%), 
            url('/images/bg.jpg') no-repeat center right / cover;
            overflow: hidden;">

    <div style="position:absolute; top:0; right:-100px; width:450px; height:100%;
                background: radial-gradient(circle at 30% 50%, rgba(255, 193, 7, 0.25), transparent 75%);
                filter: blur(50px); opacity: 0.8;"></div>

    <div class="container ps-md-5 ps-4 position-relative" style="z-index:2;">
        <div class="col-md-6">
            <h1 class="fw-bold display-3 mb-4" style="letter-spacing:1px; text-shadow: 2px 2px 15px rgba(0,0,0,0.6);">
                Welcome to <span style="color:#ffc107;">Our Gym</span>
            </h1>

            <p class="lead mb-4 fs-5" style="opacity:0.95;">
                Unleash your strength, push your limits, and transform your body 💪
            </p>

            <div class="d-flex gap-3">
                <a href="/login" class="btn btn-warning btn-lg rounded-pill px-4 shadow-lg border-0">
                    Join Now
                </a>
                <a href="/home/about" class="btn btn-outline-light btn-lg rounded-pill px-4">
                    Learn More
                </a>
            </div>
        </div>
    </div>
</div>
