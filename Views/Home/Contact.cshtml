@{
    ViewData["Title"] = "Contact Us";
}

<div class="vh-100 d-flex justify-content-center align-items-center text-white position-relative text-center"
     style="background: linear-gradient(120deg, rgba(0,0,0,0.9) 40%, rgba(0,0,0,0.7) 80%), 
            url('/images/contact-bg.jpg') no-repeat center center / cover;
            overflow: hidden;">

    <!-- توهج خلفي خفيف -->
    <div style="position:absolute; bottom:-120px; right:-100px; width:400px; height:400px;
                background: radial-gradient(circle, rgba(255,193,7,0.25), transparent 70%);
                filter: blur(45px); z-index:1;"></div>

    <div class="container position-relative" style="z-index:2; max-width:600px;">
        <h1 class="fw-bold display-4 mb-4" 
            style="letter-spacing:0.5px; text-shadow: 0 2px 10px rgba(0,0,0,0.6);">
            Get in <span style="color:#ffc107;">Touch</span>
        </h1>

        <p class="lead mb-4 fs-5" style="opacity:0.9;">
            We’d love to hear from you! Whether you have questions, feedback, 
            or need assistance — our team is here to help.
        </p>

        <div class="p-4 rounded-4 shadow-lg mx-auto" 
             style="background-color: rgba(255, 255, 255, 0.08); backdrop-filter: blur(10px);">
            <p class="fs-5 mb-3">
                📧 <strong>Email:</strong> <a href="mailto:info@gym.com" class="text-warning text-decoration-none">info@gym.com</a>
            </p>
            <p class="fs-5 mb-0">
                📞 <strong>Phone:</strong> <a href="tel:+201000000000" class="text-warning text-decoration-none">+20 100 000 0000</a>
            </p>
        </div>

        <div class="mt-5">
            <a href="/" class="btn btn-outline-light rounded-pill px-4 py-2">
                Back to Home
            </a>
        </div>
    </div>
</div>
